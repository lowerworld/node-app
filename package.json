{
  "name": "node-app",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "packageManager": "pnpm@10.20.0",
  "scripts": {
    "dev": "NODE_ENV=development tsx watch --clear-screen=false src/index.ts",
    "build": "tsup-node",
    "build:docker": "docker build .",
    "start": "NODE_ENV=production node --enable-source-maps dist/index.js",
    "format": "biome format",
    "lint:biome": "biome lint",
    "lint:check-types": "tsc --noEmit",
    "lint": "turbo run lint:biome lint:check-types --log-order=grouped"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.18.13",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "turbo": "^2.6.0",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
